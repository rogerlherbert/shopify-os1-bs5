<hr class="{% if section.settings.invisible == true %}invisible {% endif %}py-{{ section.settings.size }} m-0"{% if section.settings.background_color != empty %} style="background-color: {{ section.settings.background_color }}; opacity: 1;"{% endif %}>

{% schema %}
{
  "name": "Spacer",
  "class": "spacer",
  "settings": [
    {
      "type": "range",
      "id": "size",
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "Size",
      "default": 3
    },
    {
       "type": "checkbox",
       "id": "invisible",
       "label": "Invisible",
       "default": true
    },
    {
      "id": "background_color",
      "type": "color",
      "label": "Background Color"
    }
  ],
  "presets": [
    {
      "name": "Spacer",
      "category": "Layout"
    }
  ]
}
{% endschema %}