<div class="offcanvas offcanvas-start" tabindex="-1" id="nav-drawer" aria-labelledby="offcanvasLabel">

  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasLabel">{{ 'layout.nav.drawer_header' | t }}</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="{{ 'layout.nav.close_button' | t }}"></button>
  </div>

  <div class="offcanvas-body">
    <form action="/search" method="get" role="search">
      <div class="input-group mb-5">
        <input class="form-control form-control-lg" type="search" name="q" value="{{ search.terms | escape }}" required="required">
        <input type="hidden" name="type" value="product">
        <button class="btn btn-primary" type="submit">{{ 'layout.nav.search_button' | t }}</button>
      </div>
    </form>

    <div class="mx-3">
    {% render 'linklist-navlink', list: section.settings.main_menu %}
    <hr>
    {% render 'linklist-navlink', list: section.settings.secondary_menu %}
    </div>
  </div>
</div>
