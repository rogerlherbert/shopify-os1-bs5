<script id="Cookiebot" src="https://consent.cookiebot.com/uc.js" data-cbid="{{ settings.cookiebot_id }}" type="text/javascript" async></script>
<script>
  window.addEventListener("CookiebotOnConsentReady", function() {
    var c = Cookiebot.consent,
        p = c.preferences,
        s = c.statistics,
        m = c.marketing,
        tracking = p && s && m ? true : false;
    window.Shopify.customerPrivacy.setTrackingConsent(tracking, function() {
      console.log("Tracking " + (tracking ? "en" : "dis") + "abled");
    });
  });
</script>
