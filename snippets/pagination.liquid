<nav aria-label="Page navigation">
  <ul class="pagination pagination-lg justify-content-center">
    {% if paginate.previous.is_link %}
      <li class="page-item"><a class="page-link" href="{{ paginate.previous.url }}"><i class="bi bi-chevron-left"></i></a></li>
    {% else %}
      <li class="page-item disabled"><span class="page-link"><i class="bi bi-chevron-left"></i></span></li>
    {% endif %}

    <li class="page-item disabled"><span class="page-link">{{ paginate.current_page }}</span></li>

    {% if paginate.next.is_link %}
      <li class="page-item"><a class="page-link" href="{{ paginate.next.url }}"><i class="bi bi-chevron-right"></i></a></li>
    {% else %}
      <li class="page-item disabled"><span class="page-link"><i class="bi bi-chevron-right"></i></span></li>
    {% endif %}
  </ul>
</nav>